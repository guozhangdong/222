# 服务器配置
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=linlife
DB_USER=root
DB_PASSWORD=password
DB_DIALECT=mysql

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# 微信小程序配置
WX_APPID=your-wechat-appid
WX_SECRET=your-wechat-secret
WX_TOKEN=your-wechat-token
WX_ENCODING_AES_KEY=your-encoding-aes-key

# 微信支付配置
WX_MCH_ID=your-mch-id
WX_PAY_KEY=your-pay-key
WX_NOTIFY_URL=https://your-domain.com/api/v1/payment/notify
WX_REFUND_NOTIFY_URL=https://your-domain.com/api/v1/payment/refund-notify

# 微信支付证书路径
WX_PAY_CERT_PATH=./certs/apiclient_cert.p12

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# 日志配置
LOG_LEVEL=info
LOG_PATH=./logs

# 邮件配置
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USER=your-email@qq.com
SMTP_PASS=your-email-password

# 短信配置
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key
SMS_SIGN_NAME=邻生活
SMS_TEMPLATE_CODE=your-template-code

# 高德地图API
AMAP_KEY=your-amap-key

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 缓存配置
CACHE_TTL=3600

# 积分配置
POINTS_RATE=0.05
SIGN_IN_POINTS=5

# 会员配置
SILVER_THRESHOLD=1000
GOLD_THRESHOLD=5000
SILVER_BONUS=20
GOLD_BONUS=50

# 配送配置
DELIVERY_FEE=5
FREE_DELIVERY_THRESHOLD=30

# 运营配置
ADMIN_EMAIL=admin@linlife.com
ADMIN_PASSWORD=admin123

# 第三方服务
QINIU_ACCESS_KEY=your-qiniu-access-key
QINIU_SECRET_KEY=your-qiniu-secret-key
QINIU_BUCKET=your-qiniu-bucket
QINIU_DOMAIN=your-qiniu-domain